@page
@model Notes_App.Pages.DeleteModel

@{
    ViewData["Title"] = "Löschen";
}

<h1>Löschen</h1>

<h3>Sind Sie sicher das Sie diese Notiz löschen wollen?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.Titel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.Titel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.Erstellungsdatum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.Erstellungsdatum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.Abschlussdatum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.Abschlussdatum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.Text)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Note.ID" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a asp-page="./Index">Zurück zur Übersicht</a>
    </form>
</div>
